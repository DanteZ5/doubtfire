<% unless params[:query].present? %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(252,74,26,0.2) 0%, rgba(50,50,50,0.2) 50%), url('http://21033-presscdn.pagely.netdna-cdn.com/wp-content/uploads/2017/01/feat_grandma_kids.jpg');">
  <div class="banner-content">
    <h1>Doubtfire</h1>
    <p>Faites confiance à l'expérience</p>
    <% unless user_signed_in? %>
    <button type="button" class="btn btn-classic" data-toggle="modal" data-target=".modal-sign_up">Create an account</button>
    <% end %>
  </div>
</div>

<div class="modal fade modal-sign_up" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= render "shared/form_sign_up" %>
    </div>
  </div>
</div>


<div class="mission-text">
  <p>Disponibles, responsables, sérieuses et proches de chez vous…</p>
  <br>
  <p class="underline">Nos grand-mères sont à votre service.</p>
</div>
<% end %>

<div class="grandma-cards">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-12">
     <% @grandmas[0..5].each do |grandma| %>
     <div class="col-xs-12 col-sm-6 col-md-4">
      <% if grandma.user.photo %>
      <div class="grandma-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path grandma.user.photo %>')">
        <div class="grandma-title">
          <h2><%= grandma.user.first_name %></h2>
          <p><%= grandma.user.address %></p>
          <% if grandma.cooking %>
          <i class="fas fa-utensils activities-display"></i>
          <% end %>
          <% if grandma.baby_sitting %>
          <i class="fas fa-child activities-display"></i>
          <% end %>
          <% if grandma.pet_sitting %>
          <i class="fas fa-paw activities-display"></i>
          <% end %>
          <% if grandma.knitting %>
          <i class="fas fa-cut activities-display"></i>
          <% end %>
          <%= link_to "", grandma_path(grandma), class:"card-link" %>
        </div>
      </div>

      <% else  %>

      <div class="grandma-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://clipartbarn.com/wp-content/uploads/2016/12/Women-black-lady-clipart-kid.png')">
        <div class="grandma-title">
