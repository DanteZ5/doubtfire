          <% end %>
          <% if grandma.baby_sitting %>
          <i class="fas fa-child""></i>
          <% end %>
          <% if grandma.pet_sitting %>
          <i class="fas fa-paw"></i>
          <% end %>
          <% if grandma.knitting %>
          <i class="fas fa-hand-scissors"></i>
          <% end %>
          <%= link_to "", grandma_path(grandma), class:"card-link" %>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>


