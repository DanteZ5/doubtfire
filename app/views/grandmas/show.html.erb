<div class="container">
  <div class="main-container">
    <div class="card-show">
      <%= image_tag @grandma.user.photo, id:"img-profile", style: "object-fit: cover;" %>
        <h1><%= @grandma.user.first_name %></h1>
        <h2>She is <%= @grandma.user.age %> years old and lives in <%= @grandma.user.address %></h2>
        <% if @current_user == @grandma %>
          <%= link_to "Edit your profile", edit_grandma_path(@grandma), class: "btn btn-primary" %>
        <% end %>
    </div>


    <div class="card-show">
      <h3>More about <%= @grandma.user.first_name %></h3>
      <p id="grandma-description"><%=  @grandma.user.description%></p>
       <h3>Raymonde's ratings</h3>
       <p> <% @grandma.user.review.times do  %>
      <span class="glyphicon glyphicon-star"></span>
        <% end %>
        <% blank_star = 5 - @grandma.user.review %>
        <% blank_star.times do %>
       <span class="glyphicon glyphicon-star-empty"></span>
        <% end %></p>
        <button class="btn btn-classic" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    <%= "Book #{@grandma.user.first_name} for #{@grandma.price}â‚¬ / hour" %>
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-block">
      <%= render 'bookings/form_booking', grandma: @grandma, booking: Booking.new %>
  </div>
</div>
</div>
