<div class="card-show">
   <h3> Where is <%=@grandma.user.first_name %>?</h3>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?center=#{@grandma.user.address}&size=600x300&maptype=roadmap&key=AIzaSyBSEhvUBg2TuRB2HeFaCxfsvJpr7_DQABM" %>
</div>

    <div class="card-show">
      <h3> <%= @grandma.user.first_name %> is available for</h3>
      <div id="activity">
        <% if @grandma.knitting %>
          <div class="row">
            <div class="polaroid">
              <%= image_tag 'activities/knitting.jpg' %>
              <p>Knitting</p>
            </div>
        <% end %>

        <% if @grandma.cooking %>
            <div class="polaroid">
              <%= image_tag 'activities/cooking.jpg', alt: "Cooking" %>
              <p>Cooking</p>
            </div>
          </div>
        <% end %>


        <% if @grandma.baby_sitting %>
          <div class="row">
            <div class="polaroid">
              <%= image_tag 'activities/babysitting.jpg' %>
              <p>Baby-Sitting</p>
            </div>
        <% end %>

          <% if @grandma.pet_sitting %>
            <div class="polaroid">
              <%= image_tag 'activities/dogsit.jpg' %>
              <p>Pet-Sitting</p>
            </div>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>

