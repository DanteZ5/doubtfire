<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag("doubtfire_logo_white.png") %>
  </a>

  <div>
    <%= form_tag grandmas_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Grandma"
      %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <a href="/grandmas/#mission" class= "navbar-wagon-item navbar-wagon-link">OUR GRANDMAS</a>
  <!-- Profile picture with dropdown list -->
     <%= link_to "LOGIN", "#", class: "navbar-wagon-item navbar-wagon-link", data: { toggle: 'modal', target: '.modal-sign_in'} %>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "LOGIN", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>
