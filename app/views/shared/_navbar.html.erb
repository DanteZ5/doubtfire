<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= cl_image_tag("doubtfire_logo_white", crop: :scale) %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
       <div class="col-xs-4">
    <%= form_tag grandmas_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a grandma"
      %>
    <% end %>
       </div>
    <a href="/grandmas/#mission" class= "navbar-wagon-item navbar-wagon-link">OUR GRANDMAS</a>
    <%= link_to "YOUR BOOKINGS", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= cl_image_tag current_user.photo, style: "width: 60px; height: 60px; object-fit: cover", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", 'data-toggle':"dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Profile", edit_user_registration_path %></li>
            <% if current_user.user_type == "Grandma" %>
          <li><%= link_to "Edit Grandma", edit_grandma_path(current_user.findgrandma.id) %></li>
          <% end %>
          <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="/grandmas/#grandma-cards" class= "navbar-wagon-item navbar-wagon-link">OUR GRANDMAS</a></li>
        <li><%= link_to "YOUR BOOKINGS", bookings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>
