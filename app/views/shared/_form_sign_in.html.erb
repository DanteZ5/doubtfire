<div class="tcontainer" style="text-align: center;">
  <iframe src="https://giphy.com/embed/XYot661SFS62c" max-width="480" max-height="204" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p></p>
  <div class="form-group">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <%= f.input :email, required: false, autofocus: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Connect", class:'btn-classic' %>
    </div>
  <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
