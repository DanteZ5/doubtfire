<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <h1 class='roboto'>New Booking</h1>
    <%= simple_form_for [@grandma, @booking] do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
      <%= f.input :start_hour, as: :time, reject_date: :true, required: false %>
      <%= f.input :end_hour, as: :time, required: false %>

      <%= f.input :grandma_id, :as => :hidden, :input_html => { :value => params[:grandma_id] } %>
      <%= f.submit "Book", class: "btn-classic", id: "sweet-alert" %>
    <% end %>
  </div>
</div>
